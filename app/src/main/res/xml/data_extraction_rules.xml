<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude the VOSK model files from backup to save space -->
        <exclude domain="file" path="vosk-model/" />
        <!-- Exclude temporary speech files -->
        <exclude domain="file" path="speech_temp/" />
    </cloud-backup>
    <device-transfer>
        <!-- Include essential app data for device transfer -->
        <include domain="sharedpref" path="."/>
    </device-transfer>
</data-extraction-rules>