name: Find Bad Dependency

on:
  workflow_dispatch:
    inputs: {}

jobs:
  locate-bad-attr:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 17

      - name: Set up Gradle
        uses: gradle/actions/setup-gradle@v3

      - name: Dump dependency tree
        run: gradle :app:dependencies --configuration debugRuntimeClasspath > deps.txt

      - name: Build with verbose logs
        run: gradle :app:assembleDebug --stacktrace --info > build_verbose.log

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: debug-info
          path: |
            deps.txt
            build_verbose.log