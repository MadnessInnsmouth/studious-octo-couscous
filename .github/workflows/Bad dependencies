name: Find Bad Dependency

on:
  workflow_dispatch:

jobs:
  debug-deps:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3

      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 17

      - name: Make Gradle wrapper executable
        run: chmod +x ./gradlew

      - name: Dump dependencies
        run: ./gradlew app:dependencies --configuration debugCompileClasspath > dependencies.txt

      - name: Verbose build log
        run: ./gradlew assembleDebug --stacktrace --debug > build_verbose.log

      - name: Upload artifacts
        uses: actions/upload-artifact@v3
        with:
          name: gradle-debug-files
          path: |
            dependencies.txt
            build_verbose.log